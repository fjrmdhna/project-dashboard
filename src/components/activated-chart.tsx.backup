"use client"

import { useState, useEffect } from 'react'
import { Card, CardContent, CardHeader, CardTitle } from '@/components/ui/card'
import { Radio } from 'lucide-react'

interface ActivatedChartData {
  location: string
  nyActivated: number
  activated: number
}

interface ActivatedChartProps {
  data: ActivatedChartData[]
}

export function ActivatedChart({ data }: ActivatedChartProps) {
  // Find max value for scaling
  const maxValue = Math.max(
    ...data.map(item => Math.max(item.nyActivated, item.activated))
  )

  return (
    <Card className="bg-gradient-to-r from-slate-800 to-slate-900 border-slate-700">
      <CardHeader className="pb-4">
        <div className="flex items-center space-x-3">
          <div className="w-10 h-10 bg-gradient-to-br from-blue-500 to-blue-600 rounded-lg flex items-center justify-center">
            <Radio className="h-5 w-5 text-white" />
          </div>
          <div>
            <CardTitle className="text-2xl font-bold text-white">5G ACTIVATED</CardTitle>
            <p className="text-gray-400 text-sm">Activation Progress by Location</p>
          </div>
        </div>
      </CardHeader>
      
      <CardContent className="space-y-6">
        {/* Chart */}
        <div className="space-y-4">
          {data.map((item, index) => (
            <div key={index} className="space-y-2">
              {/* Location Label */}
              <div className="flex justify-between items-center">
                <span className="text-sm font-medium text-gray-300 min-w-[80px]">
                  {item.location}
                </span>
                <div className="flex space-x-4 text-xs text-gray-400">
                  <span>NY: {item.nyActivated}</span>
                  <span>Activated: {item.activated}</span>
                </div>
              </div>
              
              {/* Bars Container with Center Line */}
              <div className="relative h-8 bg-slate-700 rounded-lg overflow-hidden">
                {/* Center Line */}
                <div className="absolute left-1/2 top-0 w-0.5 h-full bg-slate-500 transform -translate-x-1/2 z-10"></div>
                
                {/* NY Activated Bar (Purple) - Left Side */}
                <div 
                  className="absolute right-1/2 top-0 h-full bg-gradient-to-r from-purple-500 to-purple-600 transition-all duration-500 ease-out"
                  style={{ 
                    width: `${(item.nyActivated / maxValue) * 50}%`,
                    minWidth: '10px'
                  }}
                />
                
                {/* Activated Bar (Green) - Right Side */}
                <div 
                  className="absolute left-1/2 top-0 h-full bg-gradient-to-r from-green-500 to-green-600 transition-all duration-500 ease-out"
                  style={{ 
                    width: `${(item.activated / maxValue) * 50}%`,
                    minWidth: '10px'
                  }}
                />
                
                {/* Values on bars */}
                <div className="absolute inset-0 flex items-center justify-between px-3">
                  <span className="text-xs font-bold text-white">
                    {item.nyActivated}
                  </span>
                  <span className="text-xs font-bold text-white">
                    {item.activated}
                  </span>
                </div>
              </div>
            </div>
          ))}
        </div>
        
        {/* Legend */}
        <div className="flex items-center justify-center space-x-6 pt-4 border-t border-slate-600">
          <div className="flex items-center space-x-2">
            <div className="w-4 h-4 bg-gradient-to-r from-purple-500 to-purple-600 rounded"></div>
            <span className="text-sm text-gray-300">NY Activated</span>
          </div>
          <div className="flex items-center space-x-2">
            <div className="w-4 h-4 bg-gradient-to-r from-green-500 to-green-600 rounded"></div>
            <span className="text-sm text-gray-300">Activated</span>
          </div>
        </div>
      </CardContent>
    </Card>
  )
} 